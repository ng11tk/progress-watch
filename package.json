{
  "name": "progress-watch",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/ng11tk/progress-watch.git",
  "author": "nitin goyal <inbox.nitin.goyal@gmail.com>",
  "license": "MIT",
  "scripts": {
    "install:all": "yarn && cd client && yarn && cd ../server && yarn",
    "dev": "concurrently \"yarn dev:server\" \"yarn dev:client\"",
    "dev:client": "cd client && yarn dev",
    "dev:server": "cd server && yarn dev",
    "start": "concurrently \"yarn start:server\" \"yarn start:client\"",
    "start:client": "cd client && yarn preview",
    "start:server": "cd server && yarn start",
    "build": "cd client && yarn build",
    "lint": "cd client && yarn lint",
    "clean": "rimraf client/node_modules server/node_modules node_modules client/dist"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "rimraf": "^6.0.1"
  }
}
